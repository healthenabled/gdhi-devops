server:
  port: {{server_port}}

spring:
  jmx:
    enabled: false
  datasource:
    url: jdbc:postgresql://{{service_deploy_db_host}}:{{db_port}}/{{db_name}}
    host: {{service_deploy_db_host}}
    port: {{db_port}}
    username: {{service_deploy_db_username}}
    password: {{service_deploy_db_password}}
  jpa:
    showSql: true
    formatSql: true
    hibernate:
      ddlAuto: true
      namingStrategy : org.hibernate.boot.model.naming.ImplicitNamingStrategyLegacyHbmImpl
      physicalNamingStrategy : it.CustomPhysicalNamingStrategyImpl
      dialect: org.hibernate.dialect.PostgreSQL94Dialect
  mail:
    host: smtp.gmail.com
    port: 587
    username: {{from_mail_address}}
    password: {{from_mail_password}}
    properties:
      mail:
        smtp:
          auth: true
          starttls:
            enable: true

db:
  url: jdbc:postgresql://{{service_deploy_db_host}}:{{db_port}}/{{db_name}}
  host: {{service_deploy_db_host}}
  port: {{db_port}}
  username: {{service_deploy_db_username}}
  password: {{service_deploy_db_password}}
  driverClassName: org.postgresql.Driver

endpoints.info.id: ping
endpoints.info.sensitive: false
endpoints.info.enabled: true
info.AppName: GDHI-Service
info.Description: Application Health Checker
info.body: pong
info.status: 200


frontEndURL: {{app_url}}

mailer:
  addressMap:
    {{to_address_name_1}}: {{to_address_email_1}}
    {{to_address_name_2}}: {{to_address_email_2}}
